// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  // directUrl is optional and can be used for Supabase connection pooling
  // directUrl = env("DIRECT_URL")
}

// This model maps to the auth.users table in Supabase
model User {
  id            String      @id @db.Uuid
  email         String      @unique @db.VarChar(255)
  name          String?     @db.VarChar(255)
  chaptersRead  Json?       @default("{}")
  createdAt     DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)
  
  @@map("users")
  @@schema("public")
}

model Book {
  id            Int       @id @default(autoincrement())
  title         String    @db.VarChar(255)
  numChapters   Int       @db.SmallInt
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
  
  @@map("books")
  @@schema("public")
}

// This model will be used to track sync status between local and remote
global SyncStatus {
  id          Int       @id @default(autoincrement())
  lastSynced  DateTime  @default(now()) @db.Timestamptz(6)
  userId      String    @db.Uuid
  
  @@map("sync_status")
  @@schema("public")
}